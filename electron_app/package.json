{
  "name": "fvoas-electron",
  "version": "1.0.0",
  "description": "FVOAS Voice Anonymization - Electron Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": [
    "fvoas",
    "voice",
    "anonymization",
    "federal",
    "security"
  ],
  "author": "FVOAS Development Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.fvoas.anonymization",
    "productName": "FVOAS Voice Anonymization",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "mac": {
      "icon": "assets/fvoas_logo.icns",
      "category": "public.app-category.security"
    },
    "win": {
      "icon": "assets/fvoas_logo.ico"
    },
    "linux": {
      "icon": "assets/fvoas_logo.png",
      "category": "Security"
    }
  }
}
