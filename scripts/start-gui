def check_dependencies():
    """Check if required dependencies are installed."""
    print("ğŸ” Checking dependencies...")

    try:
        import gradio
        print(f"  âœ“ Gradio {gradio.__version__}")
    except ImportError:
        print("  âœ— Gradio not installed")
        print("\nğŸ“¦ Installing dependencies...")
        subprocess.run([sys.executable, "-m", "pip", "install", "-r", "requirements.txt", "-q"])
        print("  âœ“ Dependencies installed")

    try:
        import librosa
        import parselmouth
        import rich
        print("  âœ“ Core dependencies found")
    except ImportError as e:
        print(f"  âœ— Missing dependency: {e}")
        print("\nğŸ’¡ Run: pip install -r requirements.txt")
        return False

    return True


def main():
    """Main entry point."""
    print_banner()

    # Check dependencies
    if not check_dependencies():
        print("\nâŒ Dependency check failed. Please install requirements.")
        return 1

    print("\n" + "=" * 80)
    print("LAUNCHING WEB INTERFACE")
    print("=" * 80 + "\n")

    # Parse arguments
    port = 7860
    share = False

    for arg in sys.argv[1:]:
        if arg.startswith('--port='):
            port = int(arg.split('=')[1])
        elif arg == '--share':
            share = True
        elif arg in ['-h', '--help']:
            print("Usage: python start_gui.py [OPTIONS]")
            print("\nOptions:")
            print("  --port=PORT    Set custom port (default: 7860)")
            print("  --share        Create public share link")
            print("  -h, --help     Show this help message")
            print("\nExamples:")
            print("  python start_gui.py")
            print("  python start_gui.py --port=8080")
            print("  python start_gui.py --share")
            return 0

    print(f"ğŸš€ Starting server on port {port}...")
    print(f"ğŸŒ URL: http://localhost:{port}")

    if share:
        print("ğŸ”— Share mode: Creating public link...")

    print("\nğŸ’¡ Tips:")
    print("  - Drag and drop audio files to analyze")
    print("  - View real-time visualizations")
    print("  - Download JSON/Markdown reports")
    print("  - Use batch tab for multiple files")

    print("\nâš   Press Ctrl+C to stop the server")
    print("=" * 80 + "\n")

    # Import and launch
    try:
        sys.path.insert(0, str(Path(__file__).parent.parent))
        from audioanalysisx1.gui.app import AudioAnalysisGUI

        gui = AudioAnalysisGUI()
        gui.launch(share=share, server_port=port)

    except KeyboardInterrupt:
        print("\n\nğŸ‘‹ Shutting down server...")
        print("âœ“ Server stopped\n")
        return 0

    except Exception as e:
        print(f"\nâŒ Error: {e}")
        print("\nğŸ’¡ Troubleshooting:")
        print("  - Check dependencies: pip install -r requirements.txt")
        print("  - Try different port: python start_gui.py --port=8080")
        print("  - Check logs above for details")
        return 1


if __name__ == '__main__':
    sys.exit(main())
